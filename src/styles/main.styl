/**
 *  Passtech.be - HireMe page - Main Stylus Document
 */

// RESET
@import "kouto-swiss"
meyer-reset()

// FONTS
font-face( "Webhostinghub Glyphs", "./fonts/webhostinghub-glyphs", normal, normal, true )
Glyphs = "Webhostinghub Glyphs"

// GLOBALS
*
	font-smooth always
	-webkit-font-smoothing antialiased
    outline 0
    box-sizing border-box
    -webkit-tap-highlight-color rgba( black, 0 )
    user-select none
    -webkit-text-size-adjust 100%


html
	width 100%
	height 100%
	
body
    font: 12px Helvetica, Arial, sans-serif
    line-height: 1.2rem

// CONTENT
#content
	postion relative
	width 100%
	height 100%

    header
        margin-bottom 1rem

        h1
            font-size 1.3rem
        blockquote
            font-size 1.2rem
        figure
            width 100%

    article
        section
            margin-bottom .2rem

        p
            font-size .8rem
            margin-bottom .2rem

        #welcome
            :before
                content: "T"





